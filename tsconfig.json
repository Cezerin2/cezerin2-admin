{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "outDir": "build",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "removeComments": true,
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "compileOnSave": true,
  "include": ["src"]
}
